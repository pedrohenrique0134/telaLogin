<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9c9c9"
    tools:context=".CadastroActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_cadastro"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/perfil"
        app:layout_constraintBottom_toTopOf="@+id/cadastroName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/add_image_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar imagem"
        app:layout_constraintBottom_toTopOf="@+id/cadastroName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_cadastro"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/cadastroName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:hint="nome"
        android:textColor="#5e605f"
        app:layout_constraintBottom_toTopOf="@+id/cadastroEmail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948"
        tools:layout_editor_absoluteX="10dp" />
    <EditText
        android:id="@+id/cadastroEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:hint="email"
        android:textColor="#5e605f"
        app:layout_constraintBottom_toTopOf="@+id/cadastroSenha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/cadastroSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="104dp"
        android:background="@color/white"
        android:hint="senha"
        app:layout_constraintBottom_toTopOf="@+id/Btn"

        app:layout_constraintEnd_toEndOf="@+id/cadastroEmail"
        app:layout_constraintStart_toStartOf="@+id/cadastroEmail" />

    <Button
        android:id="@+id/Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="236dp"
        android:padding="10dp"
        android:text="inscreve-se"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="34dp" />

</androidx.constraintlayout.widget.ConstraintLayout>