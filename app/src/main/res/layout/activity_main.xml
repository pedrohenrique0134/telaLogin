<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#d3d3d3 "
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/logiEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:hint="email"
        android:textColor="#5e605f"
        app:layout_constraintBottom_toTopOf="@+id/logiSenha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/logiSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="104dp"
        android:background="@color/white"
        android:hint="senha"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Next"

        app:layout_constraintEnd_toEndOf="@+id/logiEmail"
        app:layout_constraintStart_toStartOf="@+id/logiEmail" />

    <Button
        android:id="@+id/Btn_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="236dp"
        android:padding="10dp"
        android:text="login"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/cadastroPrimeiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cadastrar ?"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Next" />
</androidx.constraintlayout.widget.ConstraintLayout>